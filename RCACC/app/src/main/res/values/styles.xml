<resources>

    <!--Application Theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Entire Application (drawer)-->
    <style name="grandDrawerLayout">
        <item name="android:background">@color/background</item>
    </style>

    <!--All Individual Fragments (establish margins)-->
    <style name="LayoutMargins">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:layout_marginLeft">@dimen/marginOut</item>
        <item name="android:layout_marginRight">@dimen/marginOut</item>
        <item name="android:layout_marginBottom">@dimen/marginOut</item>
    </style>

    <!--Size of Group Icon-->
    <dimen name="groupIconSize">
        24dp
    </dimen>

    <!--Size of Child Icon-->
    <dimen name="childIconSize">
        20dp
    </dimen>

    <!--Expandable (navigation drawer)-->
    <style name="expandableLV">
        <item name="android:background">@color/background</item>
    </style>

    <!--The top margin-->
    <dimen name="marginOut">
        12dp
    </dimen>

    <!--All Buttons-->
    <style name="AccentButton">
        <!--<item name="android:textColor">@color/colorAccent</item>-->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="linkButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--*******************************************************************-->
    <!--****************  TEXT AND INFORMATION DISPLAY  *******************-->
    <!--*******************************************************************-->

    <style name="largeText">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleText">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accentText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="mediumText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="infoText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="groupText">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="childText">
        <item name="android:textSize">17dp</item>
    </style>
</resources>
