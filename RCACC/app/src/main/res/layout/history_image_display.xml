<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logocadets"
        android:id="@+id/history_picture" />

    <TextView
        android:text="@string/history_cap1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/titleText"
        android:gravity="center"
        />

    <TextView
        android:text="@string/history_cap2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/infoText"
        android:gravity="center"
        />

    <TextView
        android:text="@string/history_cap3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/titleText"
        android:gravity="center"
        />

    <TextView
        android:text="@string/history_cap4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/infoText"
        android:gravity="center"
        />

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_back"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorAccent"/>
</LinearLayout>